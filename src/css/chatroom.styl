self-color = #d0e8e8
other-color = whitesmoke
system-color = whitesmoke
message-max-width = 400px
message-max-height = 300px
message-min-width = 100px
message-min-height = 60px

limit-inside()
  max-height 100%
  max-width 100%
  
main::-webkit-scrollbar
  display none

.clearfix::after
  content "."
  display block
  height 0
  clear both
  visibility hidden

div#container
  max-width 600px
  margin auto
  height 90%

div#chat-board
  min-height 400px
  padding 16px
  padding-bottom 116px !important

  ul
    li
      div.message
        max-width message-max-width
        max-height message-max-height
        min-width message-min-width
        margin 8px 0px
        word-break break-word

        div.username
          padding-left 8px

        div.content
          padding 0
          overflow hidden
          border-radius 6px
          max-width 100%

          div.text-box
            margin 8px

          img
            max-width 100%
            max-height message-max-height - 24px
            display: block
            margin: auto

    li.from-other
      div.message
        float left

      div.content
        background other-color

      div.message.with_tail::after
        content ""
        position relative
        left -6px
        top -25px
        float left
        border-top 6px solid transparent
        border-bottom 6px solid transparent
        border-right 6px solid other-color
        display block
        width 0

    li.system-msg
      div
        width 100%
        margin 8px auto

        div
          text-align center
          max-width 300px
          margin auto

          span
            padding 8px
            background-color system-color
            border-radius 8px
            color darkgray

    li.from-self
      div.message
        float right

      div.content
        background self-color

      div.message.with_tail::after
        content ""
        position relative
        left 6px
        top -25px
        float right
        border-top 6px solid transparent
        border-bottom 6px solid transparent
        border-left 6px solid self-color
        display block
        width 0

div#control-panel
  position fixed
  left 0
  right 0
  bottom 0
  margin 0px 32px
  padding 16px 32px
  height 100px
  border-top solid lightgray 1px
  background white
  min-width 350px

  .send-box
    width 80%
    height 100%
    float left

    form
      width 100%

      div
        width 100%

  .rich-content-panel
    width 8%
    height 100%
    float left

  .send-button
    width 11%
    height 100%
    text-align center
    float left

    button#send-button
      margin-top 25px

ul#member-list
  min-width 200px

  li
    padding 0px 8px
    color black
    white-space nowrap

  span.id
    color gray

div.online-green-light
  display inline-block;
  width 10px;
  height 10px;
  background-color limegreen;
  border-radius 5px;

@media screen and (max-width: 500px)

  div#chat-board
    ul
      li
        div.message
          img
            max-width 300px
            max-height 200px

  div#control-panel
    padding 16px 4px
    height 60px
    margin 0px 0px

    div.send-box
      width 70%

    div.rich-content-panel
      width 10%

    div.send-button
      width 20%
      button
        margin-top 15px

  div#chat-board
    padding 16px
    padding-bottom 76px !important

  .mdl-layout__header-row
    padding-left: 16px
