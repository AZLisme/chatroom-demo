.clearfix::after
  content "."
  display block
  height 0
  clear both
  visibility hidden

div#container
  max-width 600px
  margin auto
  height 90%

div#chat-board
  min-height 400px
  padding 16px
  padding-bottom 116px !important
  
  ul
    li
      div.message
        padding 8px
        max-width 400px
        min-width 100px
        border-radius 6px
        margin 8px 0px
        word-break break-all
        
        img
          max-width 400px
          max-height 300px
    
    li.from-other
      
      div.message
        float left
        background whitesmoke
      
      div.message::after
        content ""
        position relative
        left -14px
        top 4px
        float left
        border-top 6px solid transparent
        border-bottom 6px solid transparent
        border-right 6px solid whitesmoke
        display block
        width 0
    
    li.system-msg
      div
        width 100%
        margin auto
        
        div
          text-align center
          max-width 300px
          margin auto
          
          span
            padding 8px
            background-color whitesmoke
            border-radius 8px
            color darkgray
    
    li.from-self
      div.message
        float right
        background powderblue
      
      div.message::after
        content ""
        position relative
        left 14px
        top 4px
        float right
        border-top 6px solid transparent
        border-bottom 6px solid transparent
        border-left 6px solid powderblue
        display block
        width 0

div#control-panel
  position fixed
  left 0
  right 0
  bottom 0
  padding 16px 32px
  height 100px
  border-top solid lightgray 1px
  background white
  min-width 350px
  
  .send-box
    width 80%
    height 100%
    float left
    
    form
      width 100%
      
      div
        width 100%
  
  .rich-content-panel
    width 8%
    height 100%
    float left
  
  .send-button
    width 11%
    height 100%
    text-align center
    float left
    
    button#send-button
      margin-top 25px

ul#member-list
  min-width 200px
  
  li
    padding-left 8px
    color black
  
  span.id
    color gray

div.online-green-light
  display inline-block;
  width 10px;
  height 10px;
  background-color limegreen;
  border-radius 5px;

@media screen and (max-width: 500px)
  
  div#chat-board
    ul
      li
        div.message
          img
            max-width 300px
            max-height 200px
  
  div#control-panel
    padding 16px 4px
    height 60px
    
    div.send-box
      width 70%
    
    div.rich-content-panel
      width 10%
    
    div.send-button
      width 20%
      button
        margin-top 15px
  
    
  
  div#chat-board
    padding 16px
    padding-bottom 76px !important
  
  .mdl-layout__header-row
    padding-left: 16px
